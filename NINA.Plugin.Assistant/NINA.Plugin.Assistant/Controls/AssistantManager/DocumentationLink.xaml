<UserControl
    x:Class="Assistant.NINAPlugin.Controls.AssistantManager.DocumentationLink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="LinkText" TargetType="TextBlock">
            <Setter Property="FontStyle" Value="Italic" />
        </Style>
    </UserControl.Resources>

    <TextBlock>
        <Hyperlink NavigateUri="" RequestNavigate="Hyperlink_RequestNavigate">
            <TextBlock Style="{StaticResource LinkText}" Text="{Binding Path=DataContext.LinkText}" />
        </Hyperlink>
    </TextBlock>

</UserControl>
